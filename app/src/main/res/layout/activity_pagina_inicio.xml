<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="start"
    android:background="@drawable/fondo2"
    tools:context=".PaginaInicio">


    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="match_parent"
        android:layout_height="146dp"
        android:layout_marginTop="50dp"
        app:srcCompat="@drawable/rosalinda" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="70dp"
        android:layout_marginEnd="15dp"
        android:textSize="15dp"
        android:textColor="#EF91FF"
        android:text="EL AMOR CONVERTIDO EN UNA ROSA" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        app:cardCornerRadius="15dp"
        android:layout_marginStart="17dp"
        android:layout_marginTop="125dp"
        android:layout_marginEnd="17dp"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/btnCatalago"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:text="catalogo" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/btnCerrar"
        android:layout_width="wrap_content"
        android:layout_marginHorizontal="125dp"
        android:layout_marginTop="250dp"
        android:layout_height="wrap_content"
        android:text="Cerrar sesion"
        />


</LinearLayout>




